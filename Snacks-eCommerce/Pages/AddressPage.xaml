<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Snacks_eCommerce.Pages.AddressPage"
             Title="Address">

    <VerticalStackLayout Margin="20" Spacing="10" VerticalOptions="Start">
        <Label Text="Delivery Address" HorizontalOptions="Center" FontSize="Large"/>
        
        <Frame Padding="10" BackgroundColor="White">
            <VerticalStackLayout>
                <Entry Placeholder="Full Name" x:Name="name_ent" FontAttributes="Bold"
                       FontSize="Medium" Keyboard="Default"/>
                <Entry Placeholder="Phone Number" x:Name="phoneNumber_ent" FontAttributes="Bold"
                       FontSize="Medium" Keyboard="Telephone"/>
                <Entry Placeholder="Address" x:Name="address_ent" FontAttributes="Bold"
                       FontSize="Medium" Keyboard="Default"/>
            </VerticalStackLayout>
        </Frame>
        
        <Button x:Name="save_btn" Text="Save" FontSize="Medium" Clicked="save_btn_Clicked"/>
    </VerticalStackLayout>
</ContentPage>