<?xml version="1.0" encoding="UTF-8" ?>
<Shell xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
       x:Class="Snacks_eCommerce.AppShell"
       xmlns:local="clr-namespace:Snacks_eCommerce"
       xmlns:pages="clr-namespace:Snacks_eCommerce.Pages"
       Shell.FlyoutBehavior="Disabled"
       Shell.TabBarBackgroundColor="#a90409"
       Shell.TabBarTitleColor="White"
       Shell.TabBarUnselectedColor="FloralWhite"
       Title="Snacks_eCommerce">

    <TabBar>
        <Tab Title="Home" Icon="home">
            <ShellContent ContentTemplate="{DataTemplate pages:HomePage}"/>
        </Tab>
        <Tab Title="Cart" Icon="cart">
            <ShellContent ContentTemplate="{DataTemplate pages:CartPage}"/>
        </Tab>
        <Tab Title="Favourites" Icon="heart">
            <ShellContent ContentTemplate="{DataTemplate pages:FavouritesPage}"/>
        </Tab>
        <Tab Title="Account" Icon="profile">
            <ShellContent ContentTemplate="{DataTemplate pages:AccountPage}"/>
        </Tab>
    </TabBar>

</Shell>
