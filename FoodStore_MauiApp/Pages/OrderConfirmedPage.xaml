<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FoodStore_MauiApp.Pages.OrderConfirmedPage"
             Title="Order Confirmed">

    <VerticalStackLayout Padding="20" Spacing="20" 
                         HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand">

        <Image Source="confirmed.gif" Aspect="AspectFit"
               WidthRequest="300" HeightRequest="300"/>
        <Label Text="Order successfully confirmed." FontSize="18" FontAttributes="Bold"
               TextColor="DarkBlue" Margin="0,10,0,0"
               HorizontalOptions="Center" VerticalOptions="CenterAndExpand"/>
        <Button x:Name="return_btn" Text="Return" Clicked="return_btn_Clicked"
                FontAttributes="Bold"
                HorizontalOptions="Center" VerticalOptions="CenterAndExpand" />

    </VerticalStackLayout>
</ContentPage>
